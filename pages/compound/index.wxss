page {
  background: #f6f7f9;
  height: 100%;
  min-height: 100vh;
}



.container {
  padding-top: calc(44px + env(safe-area-inset-top));
  height: 100%;
}

.content {
  padding: 24rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
}

.card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.06);
}

.card-title {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
}

.field {
  margin-top: 18rpx;
}

.label {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.input {
  height: 76rpx;
  padding: 0 18rpx;
  border: 2rpx solid #e6e8ee;
  border-radius: 14rpx;
  background: #fff;
  font-size: 28rpx;
}

.hint {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #8a8f9a;
}

.actions {
  display: flex;
  gap: 18rpx;
  margin-top: 22rpx;
}

.primary {
  flex: 1;
  background: #07c160;
  color: #fff;
}

.ghost {
  flex: 1;
  background: #ffffff;
  color: #333;
  border: 2rpx solid #e6e8ee;
}

.error {
  margin-top: 18rpx;
  color: #d93026;
  font-size: 24rpx;
}

.result-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 14rpx;
}

.result-item {
  border: 2rpx solid #eef1f6;
  border-radius: 16rpx;
  padding: 18rpx;
}

.result-k {
  font-size: 24rpx;
  color: #6b7280;
}

.result-v {
  margin-top: 10rpx;
  font-size: 30rpx;
  font-weight: 700;
}

.sub {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.chart-wrap {
  width: 100%;
  height: 50vw;
  position: relative;
}

.chart-layer {
  position: absolute;
  inset: 0;
}

.grid-line {
  position: absolute;
  left: 0;
  right: 0;
  height: 1px;
  background: #e5e7eb;
}

.axis-y,
.axis-x {
  position: absolute;
  background: #9ca3af;
}

.axis-y {
  width: 1px;
}

.axis-x {
  height: 1px;
}

.y-label,
.x-label {
  position: absolute;
  font-size: 24rpx;
  color: #6b7280;
  transform: translateY(-50%);
  white-space: nowrap;
}

.x-label {
  transform: translateX(-50%);
}

.y-label {
  text-align: right;
  transform: translate(-100%, -50%);
  padding-right: 6rpx;
}

.line-seg {
  position: absolute;
  height: 4px;
  border-radius: 4px;
  transform-origin: left center;
}

.line-seg.contrib {
  background: #10b981;
}

.line-seg.balance {
  background: #2563eb;
}

.dot-pt {
  position: absolute;
  width: 10px;
  height: 10px;
  border-radius: 50%;
  transform: translate(-50%, -50%);
}

.dot-pt.contrib {
  background: #10b981;
}

.dot-pt.balance {
  background: #2563eb;
}


.sticky-chart {
  position: static;
  z-index: auto;
}

.legend {
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
  color: #6b7280;
  font-size: 24rpx;
}

.dot {
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
}

.dot.balance {
  background: #2563eb;
}

.dot.contrib {
  background: #10b981;
}

.legend-text {
  margin-right: 14rpx;
}

.table {
  border: 2rpx solid #eef1f6;
  border-radius: 16rpx;
  overflow: hidden;
}

.tr {
  display: flex;
  flex-direction: row;
}

.th {
  background: #f3f4f6;
}

.td {
  flex: 1;
  padding: 18rpx 12rpx;
  font-size: 24rpx;
  color: #111827;
  border-bottom: 2rpx solid #eef1f6;
}

.td.year {
  flex: 0 0 90rpx;
  text-align: center;
}
